{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "API Debug",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/api",
            "program": "${workspaceFolder}/api/src/test_api/__init__.py",
            "console": "integratedTerminal",
            "preLaunchTask": "Run UV Sync",
            "args": [
                "--host", "0.0.0.0",
                "--port", "5000",
                "--debug"
            ],
            "env": {
                // use localhost for local development (not docker)
                "DATABASE_URL": "postgresql+asyncpg://tmc:tmc_password@localhost:5432/tmc_database"
            }
        },
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "command": "npm run dev",
            "env": {
                // 5000 for local, 8000 for docker (for api)
                "NEXT_PUBLIC_API_URL": "http://localhost:8000"
            },
        },
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000"
        }
    ]
}